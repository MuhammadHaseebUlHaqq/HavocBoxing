<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CardioConditioningActivity"
    android:background="@drawable/drawable_ilustration_purple">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerInParent="false" />

    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoView"
        android:layout_centerHorizontal="true"
        android:text="Jumping Jacks"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exerciseName"
        android:layout_centerHorizontal="true"
        android:text="00:30"
        android:textSize="48sp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timerText"
        android:layout_centerHorizontal="true"
        android:text="PAUSE"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/backStepsHomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_steps_home"
        android:text="Welcome to the cardio and conditioning phase, where endurance meets determination. Embrace the rhythm of your heart as you push through each sprint, jump, and drill. Feel the sweat trickle down, igniting your passion for progress with every stride. In this arena, perseverance paves the path to peak fitness."
        android:layout_below="@+id/pauseButton"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="40dp"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:maxLines="10"
        android:scrollbarSize="4dp"
        android:fadeScrollbars="false"
        android:overScrollMode="always"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
