<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_ilustration_purple"
    tools:context=".fragments.StatisticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="HAVOC BOXING APP"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/rounded_corner">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLOAT LIKE A BUTTERFLY, STING LIKE A BEE"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_weekly_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="   M.ALI"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_green300" />
        </LinearLayout>

        <!-- 7x4 Challenge Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7x3 Challenge"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Card 1 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/rounded_corner"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/part1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOXING 7x3 CHALLENGE 1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start your boxing journey to target all muscle groups and build your dream body by following this!"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/bigworkout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="START"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/dark_green300"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- Card 2 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/rounded_corner"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/part2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOXING 7x3 CHALLENGE 2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boxing, strength, cardio: a fusion of power, endurance, and determination."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/bigworkout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="START"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/dark_green300"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- Card 3 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@drawable/rounded_corner"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/part3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOXING 7x3 CHALLENGE 3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In the boxing circuit, power and stamina unite to forge a relentless path toward  performance."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/bigworkout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="START"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/dark_green300"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- Add more cards as needed -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Workout Categories Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workouts"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card 1 -->
            <ImageView
                android:id="@+id/shadowboxing"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_corner"
                android:layout_gravity="center"
                android:src="@drawable/boxing"
                android:scaleType="centerCrop"
                />

            <!-- Card 2 -->
            <ImageView
                android:id="@+id/advancedboxing"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_corner"
                android:src="@drawable/boxingadv"
                android:scaleType="centerCrop"
                />

            <!-- Card 3 -->
            <ImageView
                android:id="@+id/strength"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_corner"
                android:src="@drawable/strength"
                android:scaleType="centerCrop" />

            <!-- Card 4 -->
            <ImageView
                android:id="@+id/cardio"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/cardio"
                android:scaleType="centerCrop" />

            <!-- Add more cards as needed -->
        </LinearLayout>

    </LinearLayout>
</ScrollView>
