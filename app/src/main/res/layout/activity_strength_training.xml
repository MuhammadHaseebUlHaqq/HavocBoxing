<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StrengthTrainingActivity"
    android:background="@drawable/drawable_ilustration_purple">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerInParent="false" />

    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoView"
        android:layout_centerHorizontal="true"
        android:text="Push-Ups"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exerciseName"
        android:layout_centerHorizontal="true"
        android:text="00:30"
        android:textSize="48sp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timerText"
        android:layout_centerHorizontal="true"
        android:text="PAUSE"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/backStepsHomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_steps_home"
        android:text="Welcome to the strength training phase of your regimen. Here, the focus shifts to building power, endurance, and resilience. Embrace the challenge of lifting, pushing, and pulling with purpose. Each repetition brings you closer to your goals, forging a stronger version of yourself with every effort."
        android:layout_below="@+id/pauseButton"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="40dp"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:maxLines="10"
        android:scrollbarSize="4dp"
        android:fadeScrollbars="false"
        android:overScrollMode="always"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
